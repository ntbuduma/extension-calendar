{
  "manifest_version": 2,
 
  "name": "Chrome Calendar Extension",
  "description": "This extension allows users to very quickly add and view events in their calendar",
  "version": "1.0",
 
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["js/content-script.js"]
    }
  ],
  "background": {
    "scripts": ["js/background-script.js"]
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}
